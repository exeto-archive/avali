{
  "name": "avali",
  "version": "0.1.0",
  "description": "Arguments validation",
  "main": "lib/index.js",
  "repository": "exeto/avali",
  "author": "Timofey Dergachev <t@exeto.me> (https://exeto.me/)",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib dist",
    "lint": "eslint src",
    "build:commonjs": "babel src --out-dir lib",
    "build:umd": "NODE_ENV=development webpack src/index.js dist/avali.js",
    "build:umd:min": "NODE_ENV=production webpack src/index.js dist/avali.min.js",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run clean && npm run lint && npm run build"
  },
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "keywords": [
    "arguments",
    "validation"
  ],
  "dependencies": {
    "lodash.isplainobject": "^4.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "^3.2.2",
    "eslint-config-exeto-base": "^1.0.0",
    "eslint-plugin-import": "^1.12.0",
    "webpack": "^1.13.1"
  }
}
